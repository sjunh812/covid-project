<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HowsToday" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_700</item>
        <item name="colorPrimaryVariant">@color/main_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- ?attr/colorPrimaryVariant -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreen" parent="Theme.HowsToday">
        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/main_700</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/main_700</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8dp</item>
    </style>
    <style name="BottomNavigationView.TextAppearance.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>